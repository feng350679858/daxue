<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- 不带数字的badge -->
    <style name="style_badge">
        <item name="android:layout_width">@dimen/badge_diameter</item>
        <item name="android:layout_height">@dimen/badge_diameter</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/reg_circle_bg</item>
    </style>
    <!-- tab栏的不带数字的badge -->
    <style name="style_badge.tab" parent="style_badge">
        <item name="android:layout_marginRight">@dimen/badge_margin_right</item>
    </style>
    <!-- 带数字的badge -->
    <style name="style_num_badge">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/num_badge_text_size</item>
        <item name="android:layout_width">@dimen/num_badge_diameter</item>
        <item name="android:layout_height">@dimen/num_badge_diameter</item>
        <item name="android:background">@drawable/reg_circle_bg</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!-- tab栏的带数字的badge -->
    <style name="style_num_badge.tab" parent="style_num_badge">
        <item name="android:layout_marginRight">@dimen/num_badge_margin_right</item>
    </style>
    <!-- PopupDialog的样式 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--PopupDialog动画的style-->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    <!-- AudioDialog样式 -->
    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- 以下为聊天框内样式 -->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/normal_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!-- =========通用样式========= -->
    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/important_dark</item>
    </style>
    <style name="content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/important_dark</item>
    </style>
    <style name="sub_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/assist_grey</item>
    </style>
    <style name="time">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/assist_grey</item>
    </style>

    <!-- 支付密码弹出框密码样式样式 -->
    <style name="pop_pay_text">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/important_dark</item>
    </style>
    <style name="pop_pay_psw_text" parent="pop_pay_text">
        <item name="android:visibility">invisible</item>
        <item name="android:text">●</item>
    </style>
    
    <style name="pop_pay_pad_text" parent="pop_pay_text">
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
