<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_cancel2"
        android:visibility="invisible" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_head_img" />

    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="陈秋实"
        android:textColor="@color/important_dark"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stu_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浙江理工大学"
            android:textColor="@color/normal_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stu_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="人文学院"
            android:textColor="@color/normal_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <include layout="@layout/mine_help_score" />

    <TextView
        android:id="@+id/tv_help_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/normal_grey"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/ib_start_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_star"
            android:button="@null" />

        <CheckBox
            android:id="@+id/ib_start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_star"
            android:button="@null" />

        <CheckBox
            android:id="@+id/ib_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_star"
            android:button="@null" />

        <CheckBox
            android:id="@+id/ib_start_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_star"
            android:button="@null" />

        <CheckBox
            android:id="@+id/ib_start_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_star"
            android:button="@null" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hollow_grey_text_bg_selector"
        android:gravity="top"
        android:hint="你还可以捎上一句话"
        android:lineSpacingMultiplier="1.1"
        android:padding="10dp"
        android:textColor="@color/important_dark"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_yellow_boarded_bg_selector"
        android:enabled="false"
        android:text="提交"
        android:textSize="16sp" />
</LinearLayout>