<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_cancel2" />

    </LinearLayout>

    <!--
            android:background="@drawable/fieldset_bg_black_alpha"
            android:divider="@drawable/sys_login_field_divider"
        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:dividerPadding="10dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:showDividers="middle">

        <com.jingcai.apps.aizhuan.view.ClearableEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/sys_login_phone"
            android:drawablePadding="10dp"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="12dp"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/normal_grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_checkstr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/sys_login_phone"
                android:drawablePadding="10dp"
                android:hint="短信验证"
                android:inputType="number"
                android:maxLength="4"
                android:padding="12dp"
                android:textColor="@color/important_dark"
                android:textColorHint="@color/normal_grey"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_send_checkstr"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="发送验证"
                android:textColor="@color/normal_grey"
                android:textSize="14sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/sys_login_pwd"
            android:drawablePadding="10dp"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:padding="12dp"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/normal_grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/sys_login_pwd"
            android:drawablePadding="10dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:padding="12dp"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/normal_grey"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="@color/normal_grey"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:textColor="@color/normal_grey"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_has_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="已有账号"
        android:textColor="@color/normal_grey"
        android:textSize="18sp" />
</LinearLayout>