<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_main_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="我只是发来试试，哦哦哦！！！"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/field_divider_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_share_qq" />

            <com.jingcai.apps.aizhuan.activity.util.LevelTextView
                xmlns:app="http://schemas.android.com/apk/res/com.jingcai.apps.aizhuan"
                android:id="@+id/ltv_level"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|right"
                app:level="16"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stu_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="贱人就是矫情"
                    android:textColor="@color/normal_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_stu_college"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="计算机科学与技术学院xxx"
                    android:textColor="@color/main_yellow"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_deploy_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="刚刚"
                android:textColor="@color/assist_grey"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@color/main_yellow"
            android:gravity="center"
            android:text="2.5元"
            android:textColor="@color/important_dark"
            android:textSize="14sp" />
    </LinearLayout>
<!--
android:background="@drawable/mine_help_text_yellow_bg"
-->
</merge>

