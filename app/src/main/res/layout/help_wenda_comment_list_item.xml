<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/content_background"
    android:clickable="false"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_cancel2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="花几支"
                android:textColor="@color/important_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_stu_name"
                android:layout_alignBaseline="@+id/tv_stu_name"
                android:text="浙江大学"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_school"
                android:layout_alignBaseline="@+id/tv_stu_name"
                android:text="计算机学院"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_stu_name"
                android:padding="5dp"
                android:text="11:31"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/help_item_like"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_stu_name"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="12"
                android:enabled="false"
                android:textColor="@color/normal_grey"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_pop_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="30分钟30分钟30分钟30分钟30分钟30分钟30分钟30分钟30分钟30分钟"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>