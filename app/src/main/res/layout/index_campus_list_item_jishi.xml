<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_help_jishi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:divider="@drawable/field_divider_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/layout_jishi_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cb_jishi_like"
            style="@style/help_checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help_item_like"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_jishi_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cb_jishi_comment"
            style="@style/help_checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help_item_jishi_comment"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_jishi_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cb_jishi_help"
            style="@style/help_checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help_item_jishi_help"
            android:text="å¸®TA" />
    </LinearLayout>
</LinearLayout>