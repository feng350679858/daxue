<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_confirm_false"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_white_boarded_bg_selector"
        android:text="不约"
        android:textColor="@color/important_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_confirm_true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_yellow_boarded_bg_selector"
        android:text="约"
        android:textColor="@color/important_dark"
        android:textSize="18sp" />
</LinearLayout>