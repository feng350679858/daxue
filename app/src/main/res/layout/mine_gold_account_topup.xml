<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="金库余额"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_mine_gold_account"
                android:drawableStart="@drawable/icon_index_tab_mine_question"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_mine_gold_topup_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350金"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值数量（元）"
            android:textColor="@color/important_dark"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_mine_gold_topup_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/normal_grey"
            android:textColor="@color/normal_grey"
            android:textSize="16sp"
            android:layout_weight="1"
            android:maxLength="7"
            android:background="@null"
            android:numeric="integer"
            android:hint="最少提现300金"
            />
        <TextView
            android:id="@+id/tv_mine_account_withdraw_balance_not_enough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额不足"
            android:textColor="@color/badge_color"
            android:textSize="16sp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/icon__hollow_disabled"
            />
        <TextView
            android:id="@+id/tv_gold_withdraw_limit_time_count"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值不限次数，立即到账，每次充值至少10元"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要支付"
                android:textColor="@color/important_dark"
                android:textSize="18sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_mine_gold_topup_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"

            android:background="@color/divider_color" />
        <ListView
            android:id="@+id/lv_mine_account_topup_choice_list"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:cacheColorHint="#000000"
            android:divider="@null"/>
        <Button
            android:id="@+id/btn_mine_gold_topup_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:background="@drawable/btn_yellow_boarded_bg_normal"
            android:text="确认充值"
            android:textSize="20sp"
            android:textColor="@color/important_dark"/>

    </LinearLayout>
</LinearLayout>
