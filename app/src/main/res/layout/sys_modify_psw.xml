<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_sys_modify_psw_old_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="旧密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:paddingLeft="@dimen/list_item_padding"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/hint_grey"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/list_item_padding"
            android:background="@color/divider_color"/>


        <EditText
            android:id="@+id/et_sys_modify_psw_new_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/list_item_padding"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/hint_grey"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/list_item_padding"
            android:background="@color/divider_color"/>

        <EditText
            android:id="@+id/et_sys_modify_psw_new_psw_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/list_item_padding"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/hint_grey"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sys_modify_psw_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:background="@drawable/btn_yellow_boarded_bg_selector"
        android:text="确认并保存"
        android:textColor="@color/assist_grey"
        android:textSize="18sp" />

</LinearLayout>