<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_background"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/layout_help_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <include layout="@layout/index_campus_list_item_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/help_item_content_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:text="求助内容请仔细想想慢慢想内容请仔细想想慢慢想\n内容请仔细想想慢慢想仔细想想慢慢想"
                android:textColor="@color/important_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_gender_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-5dp"
                android:text="只限女生"
                android:textColor="@color/normal_grey"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/index_campus_list_item_jishi" />

    <include layout="@layout/index_campus_list_item_wenda" />

</LinearLayout>
