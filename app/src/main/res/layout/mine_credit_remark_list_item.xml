<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="@drawable/field_divider_grey"
    android:showDividers="middle"
    android:dividerPadding="@dimen/list_item_padding"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_padding"
        >

        <LinearLayout
            android:id="@+id/ll_remark_star_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_star_selected" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_star_selected" />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_star_selected" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_star_selected" />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_star_selected" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_remark_time"
            style="@style/time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:20"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remark_content"
        android:textSize="14sp"
        android:textColor="@color/normal_grey"
        android:padding="@dimen/list_item_padding"
        android:layout_width="match_parent"
        android:minLines="4"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/list_item_padding"
        android:paddingRight="@dimen/list_item_padding"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_remark_source_logo"
            android:src="@drawable/default_head_img"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/tv_remark_source_name"
            android:layout_marginLeft="5dp"
            android:text="赚赚"
            android:textColor="@color/important_dark"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_remark_title"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/normal_grey"
            android:text="求助内容，求助内容，求助内容，求助内容求助内容"
            android:singleLine="true" />
    </LinearLayout>
</LinearLayout>