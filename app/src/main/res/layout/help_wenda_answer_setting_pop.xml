<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_more_pop"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_abuse_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_abuse_report"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="举报"
        android:textColor="@color/item_selected_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_anonymous"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="使用匿名"
        android:textColor="@color/item_selected_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_reedit"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="再次编辑"
        android:textColor="@color/item_selected_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_reward"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="打赏"
        android:textColor="@color/item_selected_color"
        android:textSize="14sp" />
</LinearLayout>