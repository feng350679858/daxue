<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="选择提现帐号"
        android:textColor="@color/normal_grey"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/empty_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/list_item_bg"
        android:padding="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_empty"
            android:layout_width="30dp "
            android:layout_height="30dp"
            android:src="@drawable/icon_empty_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon_empty"
            android:text="添加绑定账户"
            android:textColor="@color/normal_grey"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_right_triangle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/bank_item"
            layout="@layout/mine_gold_account_choose_list_item" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_warn1"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="@string/gold_withdraw_tip"
        android:textColor="@color/normal_grey"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="提现数量（元）"
            android:textColor="@color/important_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input"
            android:layout_width="150dp "
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv1"
            android:background="@null"
            android:hint="当前可提金额350元"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/assist_grey"
            android:textCursorDrawable="@drawable/yellow_cursor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mine_account_withdraw_balance_not_enough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="余额不足"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/gold_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_yellow_boarded_bg_selector"
        android:enabled="false"
        android:text="确认提现"
        android:textSize="16sp" />
</LinearLayout>