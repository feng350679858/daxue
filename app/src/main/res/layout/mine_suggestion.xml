<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_other_suggestion_content"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="15"
            android:textSize="16sp"
            android:padding="10dp"
            android:hint="好的建议，尽管提"
            android:textColor="@color/important_dark"
            android:textColorHint="@color/assist_grey"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/btn_other_suggestion_submit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_boarded_bg_selector"
            android:text="提交"
            android:textColor="@color/important_dark"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
