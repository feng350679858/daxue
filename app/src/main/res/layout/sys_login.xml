<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_cancel2" />

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <!--
    android:background="@drawable/fieldset_bg_black_alpha"
    android:divider="@drawable/sys_login_field_divider"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:dividerPadding="10dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:showDividers="middle">

        <com.jingcai.apps.aizhuan.view.ClearableEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/sys_login_phone"
            android:drawablePadding="10dp"
            android:hint="账号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/important_dark"
            android:textColorHint="@color/normal_grey"
            android:textSize="16sp" />


        <com.jingcai.apps.aizhuan.view.ClearableEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/sys_login_pwd"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minLines="6"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/important_dark"
            android:textColorHint="@color/normal_grey"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textColor="@color/normal_grey"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_fegret_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="忘记密码?"
        android:textColor="@color/normal_grey"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:text="注册账号"
        android:textColor="@color/normal_grey"
        android:textSize="18sp" />
</LinearLayout>